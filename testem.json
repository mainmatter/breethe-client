{
  "framework": "qunit",
  "src_files": ["src/**/*"],
  "serve_files": ["index.js"],
  "disable_watching": true,
  "launch_in_ci": ["Chrome"],
  "browser_args": {
    "Chrome": {
      "mode": "ci",
      "args": [
        "--no-sandbox",
        "--disable-gpu",
        "--headless",
        "--remote-debugging-port=0",
        "--window-size=1440,900"
      ]
    }
  }
}
